<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/event_business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business Name"
            android:textSize="8pt"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/label_event_date"
            android:layout_below="@id/event_business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Date:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/event_date"
            android:layout_toRightOf="@id/label_event_date"
            android:layout_below="@+id/event_business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="12/12/12"/>

        <TextView
            android:layout_below="@+id/label_event_date"
            android:id="@+id/label_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Time:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/event_time"
            android:layout_below="@id/event_date"
            android:layout_toRightOf="@+id/label_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Breakfast"/>

        <TextView
            android:id="@+id/label_guest_count"
            android:layout_below="@+id/label_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guest Count:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/event_guest_count"
            android:layout_below="@id/label_event_time"
            android:layout_toRightOf="@+id/label_guest_count"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>