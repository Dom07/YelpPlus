<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:id="@+id/businessCard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayoutDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/business_title"
                android:text="Business Title"
                android:textSize="10pt"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/business_address"
                android:textSize="6pt"
                android:text="Business Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_price_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Price Rating Goes Here"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutImages"
            android:layout_below="@id/linearLayoutDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/business_image_one"
                android:layout_margin="2dp"
                android:layout_width="100dp"
                android:layout_height="200px"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/business_image_two"
                android:layout_margin="2dp"
                android:layout_width="100dp"
                android:layout_height="200px"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/business_image_three"
                android:layout_margin="2dp"
                android:layout_width="100dp"
                android:layout_height="200px"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/business_image_four"
                android:layout_margin="2dp"
                android:layout_width="100dp"
                android:layout_height="200px"
                android:scaleType="fitXY"/>

        </LinearLayout>

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/tv_event_booking_label"
            android:layout_below="@+id/linearLayoutImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Booking Available"
            android:visibility="invisible"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
